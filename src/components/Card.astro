---
interface Props {
  cardStyle: string;
}

const { cardStyle } = Astro.props;
---

<div class={cardStyle}></div>

<style>
  .bentoGrid {
    background-color: hsl(210, 50%, 90%);
    border-radius: 1rem;
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s cubic-bezier(1, 0, 0, 1);
    transform: scale(0.5);
  }
  .bentoGrid.reveal {
    visibility: visible;
    opacity: 1;
    transform: scale(1);
  }


    
    /* Both grid-row and grid-column work as follows:
    starting point/end point, grid-column sets the width
    and grid-row sets the height */

    .bentoGrid:nth-of-type(1) {
      background-color: yellow;
      grid-column: 1/5;
      grid-row: 1/4;
    }

    .bentoGrid:nth-of-type(2) {
      background-color: orange;
      grid-column: 5/10;
      grid-row: 1/3;
    }

    .bentoGrid:nth-of-type(3) {
      background-color: red;
      grid-column: 1/3;
      grid-row: 4/6;
    }

    .bentoGrid:nth-of-type(4) {
      background-color: pink;
      grid-column: 1/3;
      grid-row: 6/8;
    }

    .bentoGrid:nth-of-type(5) {
      background-color: purple;
      grid-column: 3/5;
      grid-row: 4/8;
    }

    .bentoGrid:nth-of-type(6) {
      background-color: blue;
      grid-column: 5/8;
      grid-row: 3/6;
    }

    .bentoGrid:nth-of-type(7) {
      background-color: cyan;
      grid-column: 8/10;
      grid-row: 3/6;
    }

    .bentoGrid:nth-of-type(8) {
      background-color: green;
      grid-column: 5/8;
      grid-row: 6/7;
    }

    .bentoGrid:nth-of-type(9) {
      background-color: teal;
      grid-column: 8/10;
      grid-row: 6/7;
    }

    .bentoGrid:nth-of-type(10) {
      background-color: lime;
      grid-column: 7/10;
      grid-row: 7/8;
    }

    .bentoGrid:nth-of-type(11) {
      background-color: brown;
      
    }

    .bentoGrid:nth-of-type(12) {
      background-color: magenta;
    }
  
</style>

<script>
  const main = () => {
    const bentoGrids = Array.from(document.querySelectorAll(".bentoGrid"));

    bentoGrids.forEach((bentoGrid, index) => {
      setTimeout(() => {
        bentoGrid.classList.add("reveal");
      }, index * 100);
    });
  };
  document.addEventListener("DOMContentLoaded", main);
</script>
