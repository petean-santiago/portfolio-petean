}

  .bentoGrid {
    background-color: hsl(210, 50%, 90%);
    border-radius: 1rem;
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s cubic-bezier(1, 0, 0, 1);
    transform: scale(0.5);
