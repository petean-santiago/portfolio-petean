<style>
  body {
    width: 100%;
    display: flex;
    margin-top: 50px;
  }



  @media screen and (min-width: 600px){
    main {
    display: grid;
    width: 100%;
    max-width: 1100px;
    margin: 0 auto;
    gap: 14px;
    padding: 0.5rem;
    grid-template-columns: repeat(9, 1fr);
    grid-auto-rows: minmax(100px, auto);
  }

}

  @media screen and (max-width: 599px) and (min-width: 100px) {
    main {
    display: grid;
    width: 100%;
    max-width: 1100px;
    margin: 0 auto;
    gap: 8px;
    padding: 0.5rem;
    grid-template-columns: repeat(9, 1fr);
    grid-auto-rows: minmax(100px, auto);
