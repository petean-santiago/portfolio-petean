<script>
  const main = () => {
    const bentoGrids = Array.from(document.querySelectorAll(".bentoGrid"));

    bentoGrids.forEach((bentoGrid, index) => {
      setTimeout(() => {
        bentoGrid.classList.add("reveal");
      }, index * 100);
    });
  };
  document.addEventListener("DOMContentLoaded", main);
</script>

